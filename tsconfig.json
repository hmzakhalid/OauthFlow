{
  "compilerOptions": {
    "target": "es2016", 
    "module": "ESNext", 
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "server/**/*",
    "client/**/*",
    "types/**/*.d.ts",
  ]
}